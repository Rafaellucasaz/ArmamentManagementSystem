<h1 style="margin-top: 120px;">Informações de usuário</h1>


<div class="edit-user-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-field">
      <%= f.label :name, "Nome" %>
      <%= f.email_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="form-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>


    <div class="form-field">
      <%= f.label :password, "Nova senha" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, "Confirmação de nova senha"%>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="form-field">
      <%= f.label :current_password , "Senha atual"%> 
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Confirmar", class: "form-btn" , style: "margin-top:10px;"%>
    </div>
  <% end %>
</div>



