<h2>Mudar senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

<div class="form">
  <div class="form-field">
    <%= f.label :password, "Nova senha" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="form-field">
    <%= f.label :password_confirmation, "Confirm nova senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Confirmar", class: "btn-action", style: "width:100%"%>
  </div>
</div>
<% end %>

<%= link_to 'Voltar para o login', new_user_session_path, class: "link", style: "margin-top:10px;"%>
